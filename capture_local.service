[Unit]
Description=Raspberry Pi Video Capture to local USB storage
After=network.target

[Service]
ExecStart=/usr/bin/python3 /home/piuser/rpi-surveillence/capture_local.py
Restart=always
User=piuser
RestartSec=5
WorkingDirectory=/home/piuser
SyslogIdentifier=capture_local

[Install]
WantedBy=multi-user.target
